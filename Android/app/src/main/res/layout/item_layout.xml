<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/card_penggunaan"
    android:elevation="2dp"
    android:padding="15dp">


    <ImageView
        android:id="@+id/imageView"
        android:contentDescription="ini Gambar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/artikel4"
        android:scaleType="center"
        app:layout_constraintCircleRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_delete"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/card_penyakit"
            style="@style/title_hasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Miner" />

        <TextView
            android:id="@+id/card_virus"
            style="@style/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Virus xx"
            android:textColor="@color/grey" />

    </LinearLayout>


    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/delete"
        />

</androidx.constraintlayout.widget.ConstraintLayout>